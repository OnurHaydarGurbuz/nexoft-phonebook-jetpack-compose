<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- App will still run on devices without a camera -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- Needed for taking a photo with the camera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Needed for calling your REST API -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
      NOTE:
      We intentionally DO NOT declare READ_MEDIA_IMAGES or READ_EXTERNAL_STORAGE.
      With PickVisualMedia (Photo Picker) and ACTION_GET_CONTENT, storage permissions are not required.
    -->

    <!--
      If later you implement "Save to device contacts" (Profile screen),
      you'll add these (and request them at runtime):
      <uses-permission android:name="android.permission.READ_CONTACTS" />
      <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nexoft">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Nexoft">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- FileProvider for camera output into app cache -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>
</manifest>
